<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.bolong.bochetong.activity.ChangeActivity">
    <TextView
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="15612770087"
        android:padding="25dp"
        android:id="@+id/tv_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:inputType="number"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@null"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tv_phoneNumber"
        android:textCursorDrawable="@drawable/shape_edittext"
        android:id="@+id/et_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/et_change"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"/>
    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/bt_confirm"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/view"
        android:text="确定"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@mipmap/bg_kscz_chongzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
