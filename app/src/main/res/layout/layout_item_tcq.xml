<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_tcq_normal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true">
        <View
            android:id="@+id/view"
            android:layout_width="30dp"
            android:layout_height="0dp"
            app:layout_heightPercent="72%"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/iv_clock"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent="28%"
            android:src="@mipmap/icon_clock"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_toRightOf="@id/iv_clock"
            android:id="@+id/tv_time"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:text="有限时间: 2017.02.02-2017.03.02"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent="28%"
            />
        <TextView
            android:id="@+id/tv_totlaMoney"
            android:layout_centerInParent="true"
            android:text="满50元可抵"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/tv_totlaMoney"
            android:id="@+id/tv_rmb"
            android:text="￥"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/tv_rmb"
            android:id="@+id/tv_money"
            android:text="5"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_use"
            android:paddingRight="3dp"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:text="用"
            android:textColor="@color/blue"
            android:layout_width="0dp"
            app:layout_widthPercent="14%"
            android:layout_height="wrap_content"/>

        <ImageView
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@id/tv_use"
            android:id="@+id/iv_overdue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.percent.PercentRelativeLayout>
</RelativeLayout>
