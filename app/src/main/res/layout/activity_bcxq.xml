<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bcxq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.bolong.bochetong.activity.BcxqActivity">

        <RelativeLayout
            android:id="@+id/layout_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="30%"
            android:background="#f1f1f1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/bg_bcxq_nophoto" />
        </RelativeLayout>

    <!--导航图标 -->
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_main_kq"/>

        <android.support.percent.PercentRelativeLayout
            android:background="@drawable/shape_notopframe"
            android:id="@+id/layout_chewei"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="30dp"
            android:layout_below="@id/layout_photo"
            app:layout_heightPercent="20%">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="50%"
                android:text="惠康家园九块地"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_zong"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="30%"
                android:text="88车位"/>
            <TextView
                android:id="@+id/kong"
                android:layout_toRightOf="@id/tv_zong"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="30%"
                android:text="22车位"/>
            <TextView
                android:layout_toRightOf="@id/kong"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="30%"
                android:text="1km"/>
        </android.support.percent.PercentRelativeLayout>
    <TextView
        android:background="@drawable/shape_notopframe"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:layout_below="@id/layout_chewei"
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        android:textStyle="bold"
        android:text="地址:永定镇-石担路"
        />
    <RelativeLayout
        android:paddingLeft="30dp"
        android:layout_below="@id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_notopframe"
        app:layout_heightPercent="10%">
        <TextView
            android:id="@+id/tv_zffs"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="支付方式"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_zffs"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#749bfd"
            android:text="APP支付/现金支付"/>
    </RelativeLayout>
</android.support.percent.PercentRelativeLayout>
