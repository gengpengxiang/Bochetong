<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepwhite">

    <ImageView
        android:id="@+id/bg_bdcp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/bg_bdcp"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="90%"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btn_bdcp_add"
        android:layout_below="@id/bg_bdcp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/btn_bdcp_tj"
        android:layout_marginTop="20dp"/>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/btn_bdcp_add"
        android:layout_centerHorizontal="true"
        android:overScrollMode="never"
        android:id="@+id/mRecyclerView"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.percent.PercentRelativeLayout>
