<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/deepwhite"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:paddingBottom="10dp"
        android:id="@+id/layout_card_info"
        android:background="@mipmap/bg_yk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_status"
                android:paddingLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="(...)"/>
        </LinearLayout>

        <TextView
            android:maxEms="15"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_below="@id/layout_city"
            android:id="@+id/tv_park"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".."/>
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_below="@id/tv_park"
            android:id="@+id/tv_carplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号："/>
        <TextView
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_below="@id/tv_carplate"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用期限：2019.09.01-2019.10.01"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_yysysj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_notopframe_deepwhite">

        <TextView
            android:id="@+id/tv_overTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月卡剩余时间" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_overTime"
            android:layout_marginTop="10dp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/bt_xufei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_button"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="续费"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bjcp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_notopframe_deepwhite">

        <TextView
            android:id="@+id/tv_bjcph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑车牌" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_bjcph"
            android:layout_marginTop="10dp">

            <ListView
                android:divider="@null"
                android:dividerHeight="5dp"
                android:id="@+id/listView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bt_tjcp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_button"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="添加"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_cjsjh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_notopframe_deepwhite">

        <TextView
            android:id="@+id/tv_bjsjh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑手机号" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bjsjh"
            android:layout_marginTop="10dp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/tv_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/bt_bjsjh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_button"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="编辑"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
