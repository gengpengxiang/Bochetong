<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_yk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="@color/deepwhite"
    tools:context="com.bolong.bochetong.activity.NkActivity">


    <com.bolong.bochetong.view.MyViewPager
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:clipChildren="false"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="60%"/>

    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_marginRight="30dp"
        android:textColor="@color/blue"
        android:layout_alignParentRight="true"
        android:layout_below="@id/viewPager"
        android:id="@+id/tv_indicator"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="5%" />

    <Button
        android:layout_marginBottom="15dp"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/tv_indicator"
        android:id="@+id/bt_kaika"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开卡"
        android:textColor="@color/white"
        android:background="@drawable/shape_code"/>

</android.support.percent.PercentRelativeLayout>
