<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_item_tcjl"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_marginBottom="8dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv"
        android:layout_marginTop="21dp"
        android:src="@mipmap/icon_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv"
        android:id="@+id/tv_time"
        android:text="2017.06.25 18:08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_time"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv"
        android:text="100"
        android:textColor="@color/blue"
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_yuan"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_time"
        android:layout_toRightOf="@id/tv_money"
        android:text="元"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_dzfp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_time"
        android:text="电子发票 | "
        android:layout_toRightOf="@id/tv_yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_type"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_time"
        android:text="停车费"
        android:layout_toRightOf="@id/tv_dzfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bt_ykp"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/icon_arrow_right"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:text="已开票"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.percent.PercentRelativeLayout>
