<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bcxq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.bolong.bochetong.activity.BcxqActivity">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context="com.bolong.bochetong.activity.BcxqActivity">

        <RelativeLayout
            android:id="@+id/layout_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="30%"
            android:background="#f1f1f1">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_parkphoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@mipmap/bg_bcxq_nophoto" />
        </RelativeLayout>


        <android.support.percent.PercentRelativeLayout
            android:background="@drawable/shape_notopframe"
            android:id="@+id/layout_chewei"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="30dp"
            android:layout_below="@id/layout_photo"
            app:layout_heightPercent="20%">
            <TextView
                android:id="@+id/tvparkName"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="50%"
                android:text="惠康家园九块地"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_zong"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="30%"
                android:text="88车位"
                android:drawablePadding="-20dp"
                android:drawableLeft="@mipmap/icon_bcxq_zong"/>
            <TextView
                android:drawablePadding="-20dp"
                android:drawableLeft="@mipmap/icon_bcxq_kong"
                android:id="@+id/tv_kong"
                android:layout_toRightOf="@id/tv_zong"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="30%"
                android:text="22车位"/>
            <TextView
                android:id="@+id/tv_distance"
                android:layout_toRightOf="@id/tv_kong"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="30%"
                android:text="1km"/>
        </android.support.percent.PercentRelativeLayout>
        <TextView
            android:background="@drawable/shape_notopframe"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:layout_below="@id/layout_chewei"
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="10%"
            android:textStyle="bold"
            android:text="地址:永定镇-石担路"
            />

        <RelativeLayout
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_notopframe"
            app:layout_heightPercent="10%"
            android:layout_below="@+id/tv_address"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/tv_zffs"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="支付方式"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_zffs"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#749bfd"
                android:text="APP支付/现金支付"/>
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>

    <!--导航图标 -->
    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_navi"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="90dp"
        android:layout_gravity="center_vertical|right"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bt_bcxq_daohang"/>

</android.support.percent.PercentFrameLayout>
