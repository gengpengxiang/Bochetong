<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ykxf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/deepwhite"
    tools:context="com.bolong.bochetong.activity.YkxfActivity">

    <LinearLayout
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:background="@mipmap/bg_yk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_city"
                android:id="@+id/tv_status"
                android:paddingLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="(...)"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_day"
                android:paddingLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="...天"/>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:layout_below="@id/layout_city"
            android:id="@+id/tv_park"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."/>
        <TextView
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:layout_below="@id/tv_park"
            android:id="@+id/tv_carplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号：京A88888"/>
        <TextView
            android:paddingBottom="45dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:layout_below="@id/tv_carplate"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用期限：2019.09.01-2019.10.01"/>
    </LinearLayout>

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:text="月卡续费"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@drawable/shape_notopframe"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:id="@+id/linear_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:text="续费时长"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_month"
                android:drawableRight="@mipmap/icon_triangle_blue"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1个月" />

        </LinearLayout>
        <LinearLayout
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@drawable/shape_notopframe"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:id="@+id/linear_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:text="费用        "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_price"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="支付方式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@drawable/shape_notopframe"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_zhifubao"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_zhifubao_checked"/>
            <TextView
                android:textColor="@color/babyblack"
                android:id="@+id/tv_zhifubao"
                android:padding="5dp"
                android:text="支付宝"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@drawable/shape_notopframe"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_weixin_normal"/>
            <TextView
                android:textColor="@color/deepgray"
                android:id="@+id/tv_weixin"
                android:padding="5dp"
                android:text="微信"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/bt_xufei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="续费"
        android:textColor="@color/white"
        android:background="@drawable/shape_code"/>

</LinearLayout>
