<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_jsq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog"
    >

    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:text="发票类型:"
        android:textStyle="bold"
        android:textColor="@color/deepgray"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:id="@+id/tv_couponType"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:layout_toRightOf="@id/tv1"
        android:text="电子发票"
        android:textStyle="bold"
        />
    <TextView
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv1"
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:text="发票抬头:"
        android:textStyle="bold"
        android:textColor="@color/deepgray"
        />
    <TextView
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/tv2"
        android:layout_below="@id/tv1"
        android:id="@+id/tv_couponHeader"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:text="个人"
        android:textStyle="bold"
        />
    <TextView
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv2"
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:text="金额:"
        android:textStyle="bold"
        android:textColor="@color/deepgray"
        />
    <TextView
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/tv3"
        android:layout_below="@id/tv2"
        android:id="@+id/tv_couponPrice"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:text="100元"
        android:textStyle="bold"
        />
    <TextView
        android:lineSpacingExtra="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv3"
        android:id="@+id/tv4"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*确认发票后电子发票将下载到本地,请注意查收。如有需要可将图片进行打印。"/>
    <RelativeLayout
        android:background="@null"
        android:id="@+id/btn_confirm2"
        android:layout_alignParentBottom="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="30%"
        android:text="确定"
        android:textColor="#749bfd">
        <TextView
            android:onClick="doClick"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="取消"
            android:layout_centerInParent="true"
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_item_empty"/>
    </RelativeLayout>


    <RelativeLayout
        android:background="@null"
        android:layout_toRightOf="@id/btn_confirm2"
        android:layout_alignParentBottom="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="30%"
        android:text="取消"
        android:textColor="#749bfd">
        <TextView
            android:id="@+id/btn_confirm"
            android:onClick="doClick"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/shape_code"
            android:layout_centerInParent="true"
            android:text="确认"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    </android.support.percent.PercentRelativeLayout>

